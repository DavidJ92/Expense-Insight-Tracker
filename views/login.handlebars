<div class="container justify-content-center in-card">

  <body
    style='background-image: url("/images/main.webp")'
    background-position="center"
    background-repeat="no-repeat"
    alt="people with savings"
  >

    {{! login card }}
    <div id="login-card">
      <h2 class="login-title">LOGIN</h2>
      <div class="card"></div>
      <form class="form login-form">
        <div class="form-group">
          <label for="email-login">Email:</label>
          <input class="form-input" type="text" id="email-login" />
        </div>
        <div class="form-group">
          <label for="password-login">Password:</label>
          <input
            class="form-input"
            type="password"
            id="password-login"
            autocomplete="current-password"
          />
        </div>
        <div class="form-group">
          <button class="btn" type="submit">Login</button>
        </div>
        <a href="/signup">Otherwise Sign Up</a>
      </form>
    </div>

    <div class="card">
      <p>An intuitive tool designed for comprehensive expense tracking and
        financial management.</p>
    </div>

  </body>
</div>

<script src="/js/login.js"></script>