<section class="expense-details">
  <a href="/add-expense{{id}}">
    <header>{{date}}</header>

    <div class="expense-body">
      <p>
        {{format_date spending.date}}: 
        {{spending.category}}, 
        <strong>$ {{spending.amount}}</strong>
        {{spending.user_id}}
      </p>
    </div>
  </a>

</section>
    {{#each expenses}}
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text">Amount: {{amount}}</p>
        <p class="card-text">Category: {{category}}</p>
        <!-- Add more details as needed -->
      </div>
    </div>
    {{/each}}
  </script>